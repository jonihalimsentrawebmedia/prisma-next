generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
  phone    String
}

model Car {
  id        Int      @id @default(autoincrement())
  name      String
  seat      String
  transmisi String
  type      String
  image     String
  rent      Rent[]
  travel    Travel[]
}

enum RentType {
  SUPIR
  LEPAS_KUNCI
}

model Rent {
  id      Int      @id @default(autoincrement())
  type    RentType
  price   Int
  is_nego Boolean
  carId   Int
  car     Car      @relation(references: [id], fields: [carId])

  @@index([carId])
}

model Feature {
  id          Int    @id @default(autoincrement())
  icon        String
  title       String
  description String
}

model Travel {
  id          Int    @id @default(autoincrement())
  name        String
  image       String
  price       Int
  kapasitas   Int
  carTravelId Int
  mobil       Car    @relation(references: [id], fields: [carTravelId])

  @@index([carTravelId])
}
